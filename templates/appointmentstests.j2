{% extends "main.j2" %}
{% block content %}

{# READ table #}

<div class="add-container">
    <button class="add">Add</button>
</div>

<h2 id="appointmentsTestsHeader" > AppointmentsTests entries may be removed by deleting the asscociated Test </h2>

<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in appointmentstests[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the firstName, lastName, clinicId, dateTime, test name, result #}
        {% for appointmentstest in appointmentstests %}
        <tr>
            <td>{{ appointmentstest.firstName }}</td>
            <td>{{ appointmentstest.lastName }}</td>
            <td>{{ appointmentstest.clinicId }}</td>
            <td>{{ appointmentstest.dateTime }}</td>
            <td>{{ appointmentstest.name }}</td>
            <td>{{ appointmentstest.result }}</td>
            <td><button><span class="material-symbols-outlined">edit</span></button></td>
            
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="add-form-popup">
    <div class="add-form">
        <button class="close"><span class="material-symbols-outlined">close</span></button>

        <h2>Add AppointmentTest</h2>

        <form>
            <div>
                <label for="dateTime">dateTime:</label>
                <input type="datetime-local" name="dateTime" id="dateTime">
            </div>

            <div>
                <label for "clinicId">clinicId:</label>
                <input type="text" name="clinicId">
            </div>

            <div>
                <label for "patientId">patientId:</label>
                <input type="text" name="patientId">
            </div>

            <div>
                <label for "statusId">statusId:</label>
                <input type="text" name="statusId">
            </div>

            <button class="submit">Submit</button>
        </form>
    </div>
</div>


{% endblock %}