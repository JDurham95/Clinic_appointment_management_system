{% extends "main.j2" %}
{% block content %}

{# READ table #}

<div class="add-container">
    <button class="add">Add</button>
</div>

<h3 id="appointmentsTestsHeader" > AppointmentsTests entries may be removed by deleting the asscociated Test </h3>

<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            <th>Patient First Name</th>
            <th>Patient Last Name</th>
            <th>testId</th>
            <th>Appointment Date Time </th>
            <th>Test Name</th>
            <th>Test Result</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {# For each row, print the firstName, lastName, clinicId, dateTime, test name, result #}
        {% for info in appointmentstests_info %}
        <tr>
            <td>{{ info.firstName }}</td>
            <td>{{ info.lastName }}</td>
            <td>{{ info.clinicId }}</td>
            <td>{{ info.dateTime }}</td>
            <td>{{ info.name }}</td>
            <td>{{ info.result }}</td>
            <td><a href="{{ url_for('appointmentstests', id=info.appointmentTestId) }}"><span class="material-symbols-outlined">edit</span></td>
        </tr>
    
        {% endfor %}
    </tbody>
</table>

<div class="add-form-popup {{"active" if action == "Update"}}">
    <div class="add-form">
        <button class="close"><span class="material-symbols-outlined">close</span></button>

        <h2>{{action}} AppointmentTest</h2>

        <form action="/appointmentstests" method="POST">

            <div class="flex-center">
                <label for="appointmentId">Appointment ID: <span class="red">*</span></label>
                <select name="appointmentId" id="appointmentId" value="{{ appointmenttest['appointmentId'] }}" required>
                    {% if action == "Add" %}
                        <option>Select a appointment</option>
                    {% endif %}
                    {% for appointment in appointments %}
                        <option value="{{ appointment['appointmentId'] }}" {% if appointment['appointmentId'] == appointmenttest['appointmentId'] %} selected {% endif %}>{{ appointment.appointmentId }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="flex-center">
                <label for="testId">Test: <span class="red">*</span></label>
                <select name="testId" id="testId" value="{{ appointmenttest['testId'] }}" required>
                    {% if action == "Add" %}
                        <option>Select a test</option>
                    {% endif %}
                    {% for test in tests %}
                        <option value="{{ test['testId'] }}" {% if test['testId'] == appointmenttest['testId'] %} selected {% endif %}>{{ test.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="flex-center">
                <label for="testResultId">Test Result: <span class="red">*</span></label>
                <select name="testResultId" id="testResultId" value="{{ appointmenttest['testResultId'] }}" required>
                    {% if action == "Add" %}
                        <option>Select a result</option>
                    {% endif %}
                    {% for result in results %}
                        <option value="{{ result['testResultId'] }}" {% if result['testResultId'] == appointmenttest['testResultId'] %} selected {% endif %}>{{ result.result }}</option>
                    {% endfor %}
                </select>
            </div>

            <button class="submit">Submit</button>
        </form>
    </div>
</div>


{% endblock %}